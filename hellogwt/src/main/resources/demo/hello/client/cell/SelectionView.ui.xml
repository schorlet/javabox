<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="messages" type="demo.hello.client.Messages" />

  <g:LayoutPanel width="100%">
    <g:layer left="4%" right="72%" top="4px" height="22px">
      <g:Label>A</g:Label>
    </g:layer>
    <g:layer left="30%" right="2%" top="2px" height="24px">
      <g:TextBox ui:field="aText" width="100%" />
    </g:layer>

    <g:layer left="4%" right="2%" top="30px" height="24px">
      <g:Button ui:field="filter" text="{messages.filter}" width="100%"></g:Button>
    </g:layer>

    <g:layer left="4%" right="2%" top="56px" height="24px">
      <g:Button ui:field="regex" text="{messages.regex}" width="100%"></g:Button>
    </g:layer>

    <g:layer left="4%" right="2%" top="82px" height="24px">
      <g:Button ui:field="clear" text="{messages.clear}" width="100%"></g:Button>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>
